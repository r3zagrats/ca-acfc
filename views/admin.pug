.sidebar
  .logo
    img.ca-logo(src='/images/logo.png' alt='logo')
  ul.menu
    each Channel in Channels
      li.menu-item
        .menu-item-heading
          a= Channel.Name
          i.fa-solid.fa-chevron-right
        ul.submenu 
          li.submenu-item
            a - Manage
