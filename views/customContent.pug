doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  script(src="javascript/libs/jquery.min.js")
  link(href='styles/normalize.css' rel='stylesheet')
  title Document
  link(rel='stylesheet' href='/styles/salesforce-lightning-design-system.min.css')
  //- link(href='/styles/font-awesome.min.css' rel='stylesheet')
  link(rel='stylesheet' href='/styles/customContent.css' )
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css' integrity='sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==' crossorigin='anonymous' referrerpolicy='no-referrer')
body
  script(src='javascript/libs/blocksdk.js')
  script(src="javascript/libs/superagent.min.js")
  script(src='javascript/customContent.js' type='module')
  block content
    .ccb-form__wrapper
      .ccb-form__header Custom Content
      form#ccb-form
        .ccb-form__Options-wrapper
          select#ccb-znsOptions-select.ccb-select.slds-select(name='znsOptions')
            each znsOption in znsOptions
              option(value=znsOption.value)=znsOption.name
      .ccb-modal
        .ccb-modal__container
          .ccb-modal__loading
            svg.spinner(viewbox='0 0 50 50')
              circle.path(cx='25' cy='25' r='20' fill='none' stroke-width='5')
            p.ccb-modal__text Loading data...
          .ccb-modal__submitResult
            p.ccb-modal__submitResult-title
            .ccb-modal__submitResult-desparatebar
            .ccb-modal__submitResult-icon
              <i class="fa-solid fa-heart"></i>
              i.fas.fa-ad
            p.ccb-modal__submitResult-desc
            .ccb-modal__submitResult-desparatebar
            button.ccb-modal__submitResult-button OK
            a(href='#')
              i.fa.fa-arrow-up