doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  script(src="javascript/libs/jquery.min.js")
  link(href='styles/normalize.css' rel='stylesheet')
  title Document
  link(rel='stylesheet', href='/styles/salesforce-lightning-design-system.min.css')
  link(href='styles/customContentBlock.css' rel='stylesheet')
  link(href='styles/fontawesome.min.css' rel='stylesheet')

body
  script(src='javascript/libs/blocksdk.js')
  script(src='javascript/customContentBlock.js' type='module')
  block content
    .ccb-form__wrapper
      .ccb-form__header Custom Content Block
      form#ccb-form
        .ccb-form__Options-wrapper
          select#ccb-znsOptions-select.ccb-select.slds-select(name='znsOptions')
            each znsOption in znsOptions
              option(value=znsOption.value)=znsOption.name